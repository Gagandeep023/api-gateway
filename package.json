{
  "name": "@gagandeep023/api-gateway",
  "version": "0.4.2",
  "description": "Type-safe Express API gateway with IP-based rate limiting, analytics, and React dashboard",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./backend": {
      "types": "./dist/backend/index.d.ts",
      "import": "./dist/backend/index.mjs",
      "require": "./dist/backend/index.js"
    },
    "./frontend": {
      "types": "./dist/frontend/index.d.ts",
      "import": "./dist/frontend/index.mjs",
      "require": "./dist/frontend/index.js"
    },
    "./frontend/styles.css": "./dist/frontend/GatewayDashboard.css",
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js"
    }
  },
  "files": [
    "dist",
    "GUIDE.md"
  ],
  "scripts": {
    "build": "tsup && cp src/frontend/GatewayDashboard.css dist/frontend/GatewayDashboard.css",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "api-gateway",
    "rate-limiting",
    "express",
    "middleware",
    "analytics",
    "react",
    "dashboard",
    "typescript",
    "ip-tracking",
    "token-bucket",
    "sliding-window"
  ],
  "author": "Gagandeep Bhatia <gagandeepbhatia2303@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gagandeep023/api-gateway.git"
  },
  "homepage": "https://github.com/Gagandeep023/api-gateway#readme",
  "bugs": {
    "url": "https://github.com/Gagandeep023/api-gateway/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "express": "^4.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "recharts": "^2.0.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "recharts": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^3.7.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
